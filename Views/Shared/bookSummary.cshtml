@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h3>@Model.Title</h3>
        <span class="badge bg-info" style="float:right">
            Pages: @Model.PageCount
        </span>
    </div>
    
    <ul class="list-group text-left list-group-item-info">
        <li class="list-group-item list-group-item-info">ISBN: @Model.Isbn</li>
        <li class="list-group-item">Price: $@Model.Price</li>
        <li class="list-group-item list-group-item-info">Author: @Model.Author</li>
        <li class="list-group-item">Classification: @Model.Classification</li>
        <li class="list-group-item list-group-item-info">Publisher: @Model.Publisher</li>
    </ul>

    <form method="post" asp-page="/Buy">

        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text"><button class="btn btn-success btn-sm float-end" type="submit">Purchase</button></span>
    </form>
</div>
